<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardElevation="4dp"
        android:id="@+id/cvKlik"
        app:cardCornerRadius="4dp">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent"
                      android:orientation="vertical">
            <ImageView android:layout_width="50dp"
                       android:layout_height="match_parent"
                       android:layout_weight="0.7"
                       android:src="@drawable/buku"/>
            <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                      android:text="3 SKS"
                      android:layout_weight="1"
                      android:id="@+id/tvSks"
                      android:fontFamily="sans-serif-medium"
                      android:textColor="@android:color/holo_red_light"
                      android:textSize="20sp"/>


        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">


            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="20dp"
                      android:fontFamily="sans-serif-medium"
                      android:gravity="center"
                      android:text="Nama MK"
                      android:id="@+id/listNamaMatakuliahDosenJadwal"
                      android:textColor="@android:color/black"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="16dp"
                      android:fontFamily="sans-serif-medium"
                      android:gravity="center"
                      android:text="Nama Dosen"
                      android:id="@+id/listNamaDosenJadwal"
                      android:textColor="#2962FF"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:orientation="vertical"
                      android:layout_weight="2">
            <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/timer"
                    android:layout_height="50dp"/>
            <TextView android:layout_width="70dp"
                      android:layout_height="match_parent"
                      android:textSize="14dp"
                      android:fontFamily="sans-serif-medium"
                      android:gravity="center"
                      android:text="MINGGU"
                      android:id="@+id/tvHari"
                      android:layout_marginRight="8dp"
                      android:textColor="@android:color/holo_red_light"/>
            <TextView android:layout_width="70dp"
                      android:layout_height="match_parent"
                      android:textSize="14dp"
                      android:fontFamily="sans-serif-medium"
                      android:gravity="center"
                      android:text="GP.001"
                      android:id="@+id/tvRuang"
                      android:layout_marginRight="8dp"
                      android:textColor="@android:color/holo_red_light"/>
            <TextView android:layout_width="70dp"
                      android:layout_height="match_parent"
                      android:textSize="14dp"
                      android:fontFamily="sans-serif-medium"
                      android:gravity="center"
                      android:text="Jam"
                      android:id="@+id/tvJam"
                      android:layout_marginRight="8dp"
                      android:textColor="@android:color/holo_red_light"/>


        </LinearLayout>
        <View android:layout_width="5dp" android:layout_height="match_parent"
              android:background="@color/colorPrimary"/>


    </LinearLayout>


</android.support.v7.widget.CardView>